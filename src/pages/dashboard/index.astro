---
import Layout from "../../layouts/Layout.astro";
import type { Character } from "../../lib/db";

const db = Astro.locals.runtime.env.DB;
const userIdCookie = Astro.cookies.get("user_id");

if (!userIdCookie) {
    return Astro.redirect("/login");
}

const userId = userIdCookie.number();

// Fetch Characters
const { results: characters } = await db
    .prepare(
        'SELECT * FROM characters WHERE user_id = ? AND status != "archived" ORDER BY updated_at DESC',
    )
    .bind(userId)
    .all<Character>();

// Fetch User for Name
const user = await db
    .prepare("SELECT first_name FROM users WHERE id = ?")
    .bind(userId)
    .first<{ first_name: string }>();

// Check Discord Link
const discordLink = await db
    .prepare("SELECT * FROM discord_connections WHERE user_id = ?")
    .bind(userId)
    .first();
---

<Layout title="Dashboard - DDT Bot">
    <div class="min-h-screen bg-gray-900 text-white p-6">
        <header
            class="max-w-6xl mx-auto flex justify-between items-center mb-10"
        >
            <div>
                <h1
                    class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-pink-600"
                >
                    Your Characters
                </h1>
                <p class="text-gray-400 mt-1">
                    Welcome back, {user?.first_name || "Adventurer"}
                </p>
            </div>
            <div class="flex gap-4 items-center">
                {
                    !discordLink && (
                        <a
                            href="/login"
                            class="text-sm text-yellow-500 hover:text-yellow-400"
                        >
                            Link Discord &rarr;
                        </a>
                    )
                }
                <form action="/api/auth/logout" method="POST">
                    <button
                        type="submit"
                        class="bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded text-sm"
                        >Logout</button
                    >
                </form>
            </div>
        </header>

        <main class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Create New Card -->
                <a
                    href="/dashboard/create"
                    class="flex flex-col items-center justify-center p-8 rounded-xl border-2 border-dashed border-gray-700 hover:border-purple-500 hover:bg-gray-800/50 transition-all group h-64"
                >
                    <div
                        class="w-16 h-16 rounded-full bg-gray-800 group-hover:bg-purple-500/20 flex items-center justify-center mb-4 transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-8 w-8 text-gray-400 group-hover:text-purple-400"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 4v16m8-8H4"></path>
                        </svg>
                    </div>
                    <span
                        class="text-gray-400 group-hover:text-white font-medium"
                        >Create New Character</span
                    >
                </a>

                {
                    characters.map((char) => (
                        <div class="bg-gray-800 rounded-xl overflow-hidden shadow-lg hover:shadow-purple-500/10 transition-shadow border border-gray-700 flex flex-col">
                            <div class="h-24 bg-gradient-to-r from-purple-900 to-indigo-900" />
                            <div class="px-6 relative flex-1 flex flex-col">
                                <div class="absolute -top-12 left-6 w-20 h-20 rounded-full border-4 border-gray-800 bg-gray-700 overflow-hidden">
                                    {char.avatar_image ? (
                                        <img
                                            src={char.avatar_image}
                                            alt={char.name}
                                            class="w-full h-full object-cover"
                                        />
                                    ) : (
                                        <div class="w-full h-full flex items-center justify-center text-2xl">
                                            ðŸ‘¤
                                        </div>
                                    )}
                                </div>
                                <div class="mt-10 mb-6 flex-1">
                                    <h3 class="text-xl font-bold">
                                        {char.name}
                                    </h3>
                                    <p class="text-gray-400 text-sm italic">
                                        {char.bio || "No bio available"}
                                    </p>
                                    <div class="mt-2 text-xs uppercase tracking-wide text-gray-500 border-t border-gray-700 pt-2">
                                        Status:{" "}
                                        <span
                                            class={
                                                char.status === "active"
                                                    ? "text-green-400"
                                                    : "text-gray-400"
                                            }
                                        >
                                            {char.status}
                                        </span>
                                    </div>
                                </div>

                                <div class="grid grid-cols-2 gap-3 mb-6">
                                    <a
                                        href={`/inventory?charId=${char.id}`}
                                        class="block text-center py-2 bg-purple-600 hover:bg-purple-500 rounded font-medium transition-colors"
                                    >
                                        Inventory
                                    </a>
                                    <a
                                        href={`/dashboard/edit/${char.id}`}
                                        class="block text-center py-2 bg-gray-700 hover:bg-gray-600 rounded font-medium transition-colors"
                                    >
                                        Edit
                                    </a>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </main>
    </div>
</Layout>
